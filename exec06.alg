algoritmo "semnome"
var
       N1 : Inteiro
       S,A : Inteiro
inicio

      Escreval("Digite um número inteiro")
      Leia(N1)
      S <- (N1+1)
      A <- (N1-1)
      Escreval("O sucessor de:", N1 ," será", S)
      Escreval("O antecessor de:", N1 ," será",A)

      
      
fimalgoritmo
